<section class="main">
          <div id="areas_lat" data-areas-lat="<%= @areas_lat %>" style="display: none;"></div>
          <div id="areas_log" data-areas-log="<%= @areas_log %>" style="display: none;"></div>
          <div id="areas_address" data-areas-address="<%= @areas_address %>" style="display: none;"></div>
          <div id="areas_search" data-areas-address="<%= @areas_search %>"></div>
          <% unless current_user %>
            <div id="login_areas_lat" login-data-areas-lat="<%= @login_areas_lat %>" style="display: none;"></div>
            <div id="login_areas_log" login-data-areas-log="<%= @login_areas_log %>" style="display: none;"></div>
            <div id="login_areas_address" login-data-areas-address="<%= @login_areas_address %>" style="display: none;"></div>
          <% end %>
          <div id="maps" class="maps"></div>
          <button type="button" class="button shadow" data-toggle="modal" data-target="#demoNormalModal">投稿する</button>
          <div class="click-massage bg-white p-2">
            <h2>見つけた喫煙所の場所をクリックしてください。</h2>
          </div>
          <input type="button" value="現在地" id="setMypo">
</section>
<%= render "shared/modal" %>